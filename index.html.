<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Daily Leadership Quote</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Georgia, serif;
      background: #f9f9f9;
      padding: 40px;
      text-align: center;
    }
    .quote-box {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      max-width: 700px;
      margin: auto;
    }
    .quote {
      font-size: 1.5em;
      margin-bottom: 20px;
    }
    .author {
      font-size: 1.2em;
      color: #555;
    }
    button {
      margin-top: 30px;
      font-size: 1em;
      padding: 10px 20px;
      border: none;
      background: #007BFF;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    #confirmation {
      margin-top: 15px;
      color: green;
      font-size: 0.95em;
    }
  </style>
</head>
<body>
  <div class="quote-box">
    <div class="quote" id="quoteText">Loading quote...</div>
    <div class="author" id="quoteAuthor"></div>
    <button onclick="copyQuote()">Share This Quote</button>
    <div id="confirmation"></div>
  </div>

  <script>
    const quotes = [
      { text: "Leadership is not about titles, positions or flowcharts. It is about one life influencing another.", author: "John C. Maxwell" },
      { text: "You can have everything in life you want, if you will just help enough other people get what they want.", author: "Zig Ziglar" },
      { text: "Don't wait. The time will never be just right.", author: "Napoleon Hill" },
      { text: "Change your thoughts and you change your world.", author: "Norman Vincent Peale" },
      { text: "Discipline is the bridge between goals and accomplishment.", author: "Jim Rohn" },
      { text: "The only limit to your impact is your imagination and commitment.", author: "Tony Robbins" }
    ];

    const todayIndex = new Date().getDay() % quotes.length;
    const todayQuote = quotes[todayIndex];
    document.getElementById("quoteText").innerText = `"${todayQuote.text}"`;
    document.getElementById("quoteAuthor").innerText = `– ${todayQuote.author}`;

    function copyQuote() {
      const textToCopy = `"${todayQuote.text}" – ${todayQuote.author}`;
      navigator.clipboard.writeText(textToCopy).then(() => {
        document.getElementById("confirmation").innerText = "✅ Quote copied to clipboard!";
        setTimeout(() => {
          document.getElementById("confirmation").innerText = "";
        }, 3000);
      });
    }
  </script>
</body>
</html>
